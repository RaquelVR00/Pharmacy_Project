<!DOCTYPE Products [
	<!ELEMENT Products (type,price,numberProducts,components?)>
	<!ATTLIST Products name CDATA #REQUIRED>
	<!ELEMENT type (#PCDATA)>
	<!ELEMENT numberProducts (#PCDATA)>
	<!ELEMENT components (component+)>
	<!ELEMENT component (name,price, supplier, numberComponents)>
	<!ATTLIST component id CDATA #REQUIRED>
	<!ELEMENT name (#PCDATA)>				
	<!ELEMENT price (#PCDATA)>
	<!ELEMENT supplier (#PCDATA)>
	<!ELEMENT numberComponents (#PCDATA)>
]>

